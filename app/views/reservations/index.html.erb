<div style="height: 70px; width:40%; background-color: #ffe8de">
<div class="py-3 ml-5 h3">予約履歴</div>
</div>

<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
  <thead>
      <th>予約日</th>
      <th>席番号</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>（取消）</th>
      <th colspan="3"></th>
  </thead>

    <% @reservations.each do |reservation| %>
     <tr>
      <td><%= reservation.created_at.strftime(("%Y年%-m月%-d日%H時%M分")) %></td>
      <td><%= reservation.space_id %></td>
      <td><%= reservation.start_time.strftime(("%Y年%-m月%-d日%H時%M分")) %></td>
      <td><%= reservation.end_time.strftime(("%Y年%-m月%-d日%H時%M分")) %></td>
      <td><%= link_to "取消", reservation_path(reservation), method: :delete, "data-confirm" => "予約を取消しますか？" %></td>
    <% end %>
    </table>
    </div>

<%= paginate @reservations %>