<div class="py-3 ml-5 h3">会員一覧</div>
<div class="col-md-8 offset-md-1">
  <table class="table table-hover table-inverse">
  <thead>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th>本人確認</th>
      <th>最終更新</th>
      <th colspan="3"></th>
  </thead>

    <% @users.each do |user| %>
     <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.full_name, admin_user_path(user) %></td>
      <td><%= user.email %>
      <td>
        <% if user.is_active == true %>
        有効
        <% else %>退会
        <% end %>
      </td>
      <td>
        <% if user.status == true %>
        済
        <% else %>未
        <% end %>
      </td>
      <td><%= user.updated_at.strftime(("%Y/%-m/%d %H:%M")) %></td>
      <% end %>
      
    </table>
        <div class="mx-auto h5" style="width: 300px;"><%= paginate @users %></div>
    </div>
    </div>
    