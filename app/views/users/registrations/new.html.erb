<div class="py-3 ml-5 h3">新規登録</div>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

 <div class="field">
    名前
    <%= f.label :（姓）%>
    <%= f.text_field :last_name %>

    <%= f.label :（名） %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    フリガナ
    <%= f.label :（セイ） %>
    <%= f.text_field :last_name_kana %>

    <%= f.label :（メイ） %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
 
  <div class="field">
  <%= f.label :身分証写真 %><br />
  <%= f.file_field :image_id, :accept => 'image/*' %>
  </div>
   
  <div class="field">
  <%= f.label :本人確認動画 %>
  <%= f.file_field :movie, :accept => 'movie/*' %>
  </div>
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>

<% end %>
<h2>既に登録済みの方</h2>
<%= link_to "こちら" , new_user_session_path %> からログインしてください。

