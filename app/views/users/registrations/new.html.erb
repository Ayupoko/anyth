<div class="py-3 ml-5 h3">新規登録</div>
<form>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <table class="py-3 ml-5">
  <thead>
　<tr>
    <th class="text-right">氏名</th>
	  <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
	</tr>
	
　<tr>
    <th class="text-right">氏名（カナ）</th>
	　<td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
	</tr> 
　
　<tr>
    <th class="text-right">メールアドレス </th>
	　<td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
	</tr>
	
　<tr>
	  <th class="text-right">郵便番号（ハイフンなし）</th>
	  <td><%= f.text_field :postal_code %></td>
	</tr>
	
　<tr>
	  <th class="text-right">住所</th>
	  <td><%= f.text_field :address %></td>
	</tr>
	
　<tr>
	  <th class="text-right">電話番号（ハイフンなし）</th>
  	<td><%= f.text_field :telephone_number %></td>
	</tr>
　
　<tr>
	  <th class="text-right">パスワード（６文字以上） </th>
	  <td><% if @minimum_password_length %><% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </td>
	</tr>	
　
　<tr>
	  <th class="text-right">パスワード（確認用） </th>
	  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
	</tr>
	
　<tr>
	  <th class="text-right">身分証写真</th>
	  <td><%= f.file_field :image_id, :accept => 'image/*' %></td>
	</tr>	
	
	
　<tr>
  	<th class="text-right">本人確認動画</th>
	  <td><%= f.file_field :movie, :accept => 'movie/*' %></td>
	</tr>	
	
	<tr>
	  <th></th>
	  <td><%= f.submit "新規登録" %></td>
	</tr>	
  </thead>
  </table>
</form>
<% end %>

<div class="mt-3 ml-5 h3">既に登録済みの方</div>
<div class="ml-5"><%= link_to "こちら" , new_user_session_path %> からログインしてください。</div>
